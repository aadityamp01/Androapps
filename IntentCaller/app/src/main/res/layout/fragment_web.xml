<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Guzzlecode.IntentCaller.fragment.WebFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints,WebViewLayout">

            <EditText
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAllCaps="true"
                android:id="@+id/edtInputURL"
                android:hint="Enter Web Url, Ex: google.com"
                android:gravity="center"
                android:textSize="8pt"
                android:lines="1"
                android:inputType="textUri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="5pt"
                android:textColor="#C8C1C1"
                android:layout_marginBottom="10dp"
                android:text="Press Enter if you feel you want to load the URL"/>

            <WebView
                android:visibility="gone"
                android:id="@+id/wvWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3EBEB"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>