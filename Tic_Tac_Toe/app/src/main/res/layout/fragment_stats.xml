<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StatsFragment">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ProfilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/circle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/fragmentstat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePic"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fragmentstat1"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePic"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/fragmentstat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wins : "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/fragmentstat1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/tv_wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fragmentstat2"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/fragmentstat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Losses : "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/fragmentstat2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/tv_losses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fragmentstat3"
        app:layout_constraintTop_toBottomOf="@+id/tv_wins"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/fragmentstat4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Games : "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/fragmentstat3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/tv_totalGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fragmentstat4"
        app:layout_constraintTop_toBottomOf="@+id/tv_losses"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/fragmentstat5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Win percent : "
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/fragmentstat4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/tv_winPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fragmentstat5"
        app:layout_constraintTop_toBottomOf="@+id/tv_totalGames"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>